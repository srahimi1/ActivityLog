    <div class="container theme-showcase" role="main">

      <!-- Main jumbotron for a primary marketing message or call to action -->
      <div class="main-header center jumbotron">
        <h1>Timesheet</h1>
      </div>
      <div class="page-header">
      </div>

      <div class="row">
        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
          <div class="panel panel-primary">
            
            <div class="panel-heading">
              <h3 class="panel-title">Current Users</h3>
            </div>
            
            <div class="panel-body">
              <%= form_for :user, url: {:action => "login", :controller => "users"} do |f|  %>
              <p>  
                <%= f.label :name, "Username" %> <br/>
                <%= f.text_field :username, "size" =>40 %> <br/>
              </p>
              <p>  
                <%= f.label :password %> <br/>
                <%= f.password_field :password, "size" =>40 %> <br/>
              </p>
                <% if params[:msg].to_s == "Login info incorrect" %>
                  <div id="login_error_message" class="alert alert-danger" role="alert">Login info is incorrect</div>
                <% end %>
              <p class="align-right"> 
                <%= f.submit "Login","class" => "btn btn-lg btn-primary" %>
              </p>
              <% end %>
            </div>
          </div>
        </div><!-- /.col-xs-12 -->
        
        <div class="col-xs-0 col-sm-2 col-md-2 col-lg-2">
        </div>

        <div class="col-xs-12 col-sm-5 col-md-5 col-lg-5">
            <div class="panel panel-primary">
            
            <div class="panel-heading">
              <h3 class="panel-title">New Users</h3>
            </div>
            
            <div class="panel-body">
              <%= form_for :user, url: {action: "create", :controller => "users"}, html: {id: "enroll_form" } do |f|  %>
              <p>  
                <%= f.label :name, "Username" %> <br/>
                <%= f.text_field :username, "size" =>40, "id" => "new_username" %> <br/>
              </p>
              <p>  
                <%= f.label :first_name, "First name" %> <br/>
                <%= f.text_field :first_name, "size" =>40, "id" => "new_user_first_name" %> <br/>
              </p>
              <p>  
                <%= f.label :last_name, "Last name" %> <br/>
                <%= f.text_field :last_name, "size" =>40, "id" => "new_user_last_name" %> <br/>
              </p>
              <p>  
                <%= f.label :password %> <br/>
                <%= f.password_field :password, "size" =>40, "id" => "new_user_password" %> <br/>
              </p>
              <p>  
                <%= f.label :password, "Re-enter password" %> <br/>
                <%= f.password_field :password_confirmation, "size" =>40, "id" => "password_confirm" %> <br/>
              </p>
              <p>  
                <%= f.check_box :role, {}, "admin", "employee" %><%= f.label :role, "Role: Admin" %> <br/>
              </p>
                <div id="enroll_error_message" class="alert alert-danger" role="alert"></div>
             <% if (!!params[:msg] && (params[:msg].to_s != "Login info incorrect")) %>
                <div class="alert alert-danger" role="alert"><%= params[:msg] %></div>
              <% end %>
              <p class="align-right">
                <%= f.button "Enroll", :type => "button", "class" => "btn btn-lg btn-primary", "onclick" => "checkPassword()" %>
              </p>
              <% end %>
            </div>
          </div>
        </div>  
      </div> <!-- /row -->

    </div> <!-- /container -->